# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ---------- Database Configuration ----------
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=sunleaft_sunleaftechnologies

# ---------- CORS Configuration ----------
# Frontend origin (adjust for your deployment)
SPA_ORIGIN=http://localhost:3000

# ---------- Redis Session (Optional) ----------
REDIS_DSN="tcp://127.0.0.1:6379?database=0"

# ---------- Cookie & Session Config ----------
COOKIE_SECURE=false
COOKIE_SAMESITE=Lax

# ---------- Debug Mode ----------
APP_DEBUG=true

# ---------- Base URLs ----------
NEXT_PUBLIC_API_URL=http://localhost/frontend2-dev/api
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ---------- M-Pesa Configuration ----------
# Get credentials from https://developer.safaricom.co.ke
MPESA_ENV=sandbox
MPESA_SANDBOX_CONSUMER_KEY=your_consumer_key_here
MPESA_SANDBOX_CONSUMER_SECRET=your_consumer_secret_here
MPESA_SANDBOX_SHORTCODE=174379
MPESA_SANDBOX_PASSKEY=your_passkey_here
MPESA_CALLBACK_URL=http://localhost/frontend2-dev/api/mpesa/mpesa-callback.php

# ---------- Email Configuration ----------
# Use your SMTP credentials
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_FROM_EMAIL=noreply@yourdomain.com
MAIL_FROM_NAME="Your Company Name"
MAIL_REPLY_TO_EMAIL=support@yourdomain.com

# ---------- JWT Configuration ----------
JWT_ACCESS_SECRET=your_random_secret_key_here
TOKEN_ISSUER=sunleaf-api-dev

# ---------- AI Configuration (Optional) ----------
# Get API key from https://www.deepseek.com
DEEPSEEK_API_KEY=your_deepseek_api_key_here
AI_FALLBACK_DISABLED=false
